<div class="modal-dialog">

    <div class="modal-header">
        <h4 class="modal-title">Add a Log Entry</h4>
        <small class="font-bold">Create a log entry.</small>
    </div>

    <div class="modal-body">
        <form class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-3 control-label"
                       for="dateInput">
                    Date:
                </label>
                <div class="col-sm-7">
                    <p class="input-group">
                        <input alt-input-formats="altInputFormats"
                               class="form-control"
                               close-text="Close"
                               datepicker-options="dateOptions"
                               id="dateInput"
                               is-open="datePopUp.opened"
                               name="dateInput"
                               ng-model="logItem.date"
                               ng-required="true"
                               popup-placement="bottom-left"
                               type="text"
                               uib-datepicker-popup="dd-MMMM-yyyy" />
                        <span class="input-group-btn">
                            <button class="btn btn-default"
                                    ng-click="openDatePopUp()"
                                    type="button">
                                <i class="glyphicon glyphicon-calendar"></i>
                            </button>
                        </span>
                    </p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label"
                       for="timeInput">
                    Time:
                </label>
                <div class="col-sm-8">
                    <uib-timepicker hour-step="hstep"
                                    id="timeInput"
                                    minute-step="mstep"
                                    name="timeInput"
                                    ng-model="logItem.selectedTime"
                                    show-meridian="ismeridian">
                    </uib-timepicker>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label"
                       for="titleInput">
                    Title:
                </label>
                <div class="col-sm-8">
                    <input class="form-control"
                           id="titleInput"
                           ng-model="logItem.title"
                           placeholder=""
                           type="text">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label"
                       for="occurredAtInput">
                    Occurred At:
                </label>
                <div class="col-sm-8">
                    <input class="form-control"
                           id="occurredAtInput"
                           ng-model="logItem.occurred"
                           placeholder=""
                           type="text">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label"
                       for="remarksEntryInput">
                    Remarks/Entry:
                </label>
                <div class="col-sm-8">
                    <textarea class="form-control"
                              id="remarksEntryInput"
                              ng-model="logItem.remarks"
                              rows="5">
                        
                        
                    
                    
                    </textarea>
                </div>
            </div>
        </form>

        <div ng-show="debugEnabled">
            <br />
        </div>
    </div>
</div>

<div class="modal-footer">
    <button class="btn btn-default"
            ng-click="close()"
            type="button">
        Close
    </button>
    <button class="btn btn-success"
            ng-click="saveChanges(logItem)"
            type="button">
        Ok
    </button>
</div>