<div class="row">

    <div class="normalheader transition"
         small-header>
        <div class="hpanel"
             content="Position Log Management"
             placement="bottom"
             title="Position Log Management">
            <div class="panel-body">
                <a href=""
                   ng-click="small()">
                    <div class="clip-header">
                        <i class="fa fa-arrow-up"></i>
                    </div>
                </a>
                <div class="m-t-lg pull-right"
                     id="hbreadcrumb">
                    <ol class="breadcrumb hbreadcrumb">
                        <li>
                            <a href="@Url.Action("Index", "Portal")">Portal</a>
                        </li>
                        <li class="active">
                            EOC
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "IncidentManagement")">Incident Management</a>
                        </li>
                        <li class="active">
                            Position Log
                        </li>
                    </ol>
                </div>
                <h2 class="font-light m-b-xs">
                    Significant Events for {{sem.incident.incidentName}}
                </h2>
                <small>Manage significant events for this incident</small>
            </div>
        </div>
    </div>

    <div child="row"
         class="normalheader transition"
         small-header>
        <div animate-panel
             effect="fadeInUp">
            <div class="hpanel">
                <div class="panel-body">
                    <div class="form">
                        <div class="col-lg-6">
                            <div class="input-group m-b">
                                <span class="input-group-btn">
                                    <button class="btn btn-primary" ng-click="sem.clear()" type="button">Clear filter</button>
                                </span>
                                <input class="form-control"
                                       ng-model="sem.search"
                                       placeholder="Filter events..."
                                       type="text">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="pull-right">
                                <div style="padding-bottom: 15px">
                                    <button class="btn btn-primary"
                                            id="add"
                                            ng-click="sem.openAddModal()">
                                        Add a Significant Event
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        <div ng-repeat="e in sem.incident.events | filter:sem.search">
            <div animate-panel
                 child="row"
                 effect="fadeInUp">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="hpanel">
                            <div class="hbuilt panel-heading">
                                <div panel-tools></div>
                                <span>
                                    {{ e.eventTitle }} {{ e.logDate | date:"MM/dd/yyyy 'at' h:mma"}}
                                </span>
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <label>Occurred at location:</label> {{e.eventName}}<br/>
                                        <label>Entry:</label> {{ e.eventEntry }}
                                    </div>
                                </div>
                            </div>
                            <div class="panel-footer">
                                <div class="btn-toolbar">
                                    <div class="pull-right">
                                        <button class="btn btn-default btn-sm"
                                                ng-click="sem.openEditModal(e)">
                                            Edit
                                        </button>
                                        <button class="btn btn-default btn-sm"
                                                ng-click="sem.openDeleteModal(e)">
                                            Delete
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>