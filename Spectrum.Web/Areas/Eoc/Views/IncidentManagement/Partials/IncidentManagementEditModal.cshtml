<div class="modal-dialog">

    <div class="modal-header">
        <h4 class="modal-title">Edit Incident</h4>
        <small class="font-bold">Change an incident's details.</small>
    </div>

    <div class="modal-body">
        <form method="get" class="form-horizontal">

            <div class="form-group">
                <div class="row">
                    <div class="col-md-11">
                        <label for="incidentName">Incident Name</label>
                        <input type="text" id="incidentName" placeholder="" ng-model="incident.name" class="form-control">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <label for="typeSelect">Type: </label>
                        <select class="form-control" name="typeSelect" id="typeSelect" ng-options="option.name for option in incident.incidentTypes track by option.id" ng-model="incident.selectedType"></select>
                    </div>

                    <div class="col-md-4">
                        <label for="levelSelect">Level: </label>
                        <select class="form-control" name="levelSelect" id="levelSelect" ng-model="incident.selectedLevel">
                            <option ng-repeat="option in incident.incidentLevels track by option" value="{{option}}">{{option}}</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <label for="typeSelect">Status: </label>
                        <select class="form-control" name="statusSelect" id="statusSelect" ng-model="incident.selectedStatus">
                            <option ng-repeat="option in incident.statuses track by option" value="{{option}}">{{option}}</option>
                        </select>
                    </div>
                </div>
            </div>

        </form>

        <div ng-show="debugEnabled">
            <br />
            <div class="well well-sm">
                selectedType = {{incident.selectedType}}<br />
                selectedLevel = {{incident.selectedLevel}}<br />
            </div>
        </div>
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-default" ng-click="close()">Close</button>
    <button type="button" class="btn btn-success" ng-click="saveChanges(incident)">Save changes</button>
</div>
