@model IEnumerable<Spectrum.Web.Models.UserViewModel>

@{
    ViewBag.Title = "Users";
}

@section Styles {
}

<div ng-controller="UserPanelController as userPanelController">
    <div small-header class="normalheader transition">
        <div class="hpanel" title="Page header" content="Place your page title and breadcrumb." placement="bottom">
            <div class="panel-body">
                <a ng-click="small()" href="">
                    <div class="clip-header">
                        <i class="fa fa-arrow-up"></i>
                    </div>
                </a>
                <div class="row">
                    <div class="col-lg-1">
                        <a href="@Url.Action("Index", "UsersGrid")"><span class="label label-info">Switch to Grid View</span></a>
                    </div>
                </div>
                <div id="hbreadcrumb" class="pull-right m-t-lg">
                    <ol class="hbreadcrumb breadcrumb">
                        <li><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
                        <li><a href="@Url.Action("Index", "Users")">Users - Panel View</a></li>
                    </ol>
                </div>
                <h2 class="font-light m-b-xs">
                    Users
                </h2>
                <small>Manage your users</small>
            </div>
        </div>
    </div>

    <div small-header child=" row " class="normalheader transition">
        <div animate-panel effect="fadeInUp">
            <div class="hpanel">
                <div class="panel-body">
                    <div class="form-inline">
                        <div class="col-md-4">
                            <input class=" form-control" type="text" placeholder="Search users...">
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-default">Search</button>
                        </div>
                        <div>
                            <div class=pull-right>
                                <div style="padding-bottom: 15px">
                                    <button id="add" class="btn btn-primary" ng-click="add()">Add a User</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="content">
        <div ng-repeat="u in data.users track by u.Id">
            <div animate-panel child="row" effect="fadeInRight">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="hpanel">
                            <div class="panel-heading hbuilt">
                                <div panel-tools></div>
                                {{ u.UserName }}
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <label class="control-label">User Name: </label> {{ u.UserName }}
                                    </div>
                                    <div class="col-sm-3">
                                        <label class="control-label">Email: </label> {{ u.Email }}
                                    </div>
                                    <div class="col-sm-3">
                                        <label class="control-label">Password: </label> {{ u.Password }}
                                    </div>
                                    <div class="col-sm-3">
                                        <label class="control-label">Confirm Password: </label> {{ u.ConfirmPassword }}
                                    </div>
                                </div>
                            </div>
                            <div class="panel-footer">
                                <div class="btn-toolbar">
                                    <div class="pull-right">
                                        <button class="btn btn-sm btn-default" ng-click="edit({{ u }})">Edit</button>
                                        <button class="btn btn-sm btn-default" ng-click="profiles({{ u }})">Profiles</button>
                                        <button class="btn btn-sm btn-default" ng-click="delete({{ u }})">Delete</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    @section Scripts {
        <script src="~/Scripts/spectrum-core/users-index.js"></script>
    }
