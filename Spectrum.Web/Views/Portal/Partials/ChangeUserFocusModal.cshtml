<div class="modal-dialog">

    <div class="modal-header">
        <h4 class="modal-title">Change User Identity</h4>
        <small class="font-bold">Select the user organization and role to access the information in that context</small>
    </div>

    <div class="modal-body">
        <form method="get" class="form-horizontal">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <label for="Organization">Organization</label>
                        <div class="dropdown dropdown-example" id="Organization">
                            <ul class="dropdown-menu" role="menu">
                                <li>Spectrum Operational</li>
                                <li>New County OEM</li>
                                @*<li class="divider"></li>
                                <li><a href>Separated link</a></li>*@
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <label for="Role">Role</label>
                        <div class="dropdown dropdown-example" id="Role">
                            <ul class="dropdown-menu" role="menu">
                                <li>Observer</li>
                                <li>User</li>
                                <li>Administrator</li>
                                @*<li class="divider"></li>
                                <li>Separated link</li>*@
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-default" ng-click="cancel()">Close</button>
    <button type="button" class="btn btn-success" ng-click="ok()">Change Focus</button>
</div>