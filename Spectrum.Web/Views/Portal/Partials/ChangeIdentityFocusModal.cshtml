<div class="modal-dialog" ng-controller="identityFocusController">
    <div class="modal-header">
        <h4 class="modal-title">Change Identity Focus</h4>
        <small class="font-bold">Select the user organization and role to access the information in that context</small>
    </div>

    <div class="modal-body">
        <form method="get" class="form-horizontal">

            <div class="form-group">
                <div class="row">
                    <div class="col-md-7 dropdown">
                        <label for="selectedOrganization">Organization</label>
                        <select class="form-control m-b" id="selectedOrganization" name="orgSelect" ng-model="currentUser.selectedOrganization"
                                ng-options="option.name for option in organizations">
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-7">
                        <label for="selectedRole">Role</label>
                        <select class="form-control m-b" id="selectedRole" name="selectedRole" ng-model="currentUser.selectedRole" 
                                ng-options="option.name for option in roles"></select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-7">
                        <label for="positionSelect">Position</label>
                        <select class="form-control m-b" id="positionSelect" name="positionSelect" ng-model="selectedPosition" 
                                ng-options="position.name for position in positions track by positionId"></select>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="modal-footer">
    <button class="btn btn-default" ng-click="cancel()" type="button">Close</button>
    <button class="btn btn-success" ng-click="ok(currentUser)" type="button">Change Focus</button>
</div>
