@{
    ViewBag.Title = "Index";
}

@section Styles {
}

<div ng-controller="UserProfileController as userProfileController">
    <div small-header class="normalheader transition">
        <div class="hpanel" title="Page header" content="Place your page title and breadcrumb." placement="bottom">
            <div class="panel-body">
                <a ng-click="small()" href="">
                    <div class="clip-header">
                        <i class="fa fa-arrow-up"></i>
                    </div>
                </a>
                <div id="hbreadcrumb" class="pull-right m-t-lg">
                    <ol class="hbreadcrumb breadcrumb">
                        <li><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
                        <li><a href="@Url.Action("Index", "Users")">Users</a></li>
                        <li><a href="@Url.Action("Index", "UserProfile")">User Profiles</a></li>
                    </ol>
                </div>
                <h2 class="font-light m-b-xs">
                    User Profile
                </h2>
                <small>Manage user profiles</small>
            </div>
        </div>
    </div>

    <div small-header child=" row " class="normalheader transition">
        <div animate-panel effect="fadeInUp">
            <div class="hpanel">
                <div class="panel-body">
                    <div class="form-inline">
                        <div class="col-md-4">
                            <input class=" form-control" type="text" placeholder="Search profiles...">
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-default">Search</button>
                        </div>
                        <div>
                            <div class=pull-right>
                                <div style="padding-bottom: 15px">
                                    <button id="add" class="btn btn-primary" ng-click="add()">Add a Profile</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        <div ng-repeat="p in data.userProfiles">
            <div animate-panel child="row" effect="fadeInUp">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="hpanel">
                            <div class="panel-heading hbuilt">
                                <div panel-tools></div>
                                {{ p.ProfileName }} Profile
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <label class="control-label">Title: </label> {{ p.Title }}
                                    </div>
                                    <div class="col-sm-3">
                                        <label class="control-label">First Name: </label> {{ p.FirstName }}
                                    </div>
                                    <div class="col-sm-3">
                                        <label class="control-label">Middle Name: </label> {{ p.MiddleName }}
                                    </div>
                                    <div class="col-sm-3">
                                        <label class="control-label">Last Name: </label> {{ p.LastName }}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <label class="control-label">Nickname: </label> {{ p.Nickname }}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <label class="control-label">Secondary Email: </label> {{ p.SecondaryEmail }}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <label class="control-label">Secondary Phone: </label> {{ p.SecondaryPhone }}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <label class=" control-label">Time Zone: </label> {{ p.TimeZone }}
                                    </div>
                                    <div class="col-sm-3">
                                        <label class="control-label">Language: </label> {{ p.Language }}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-2">
                                        <div>
                                            <label> <input icheck type="checkbox" name="checkboxDefault" ng-model="userProfile.Default" disabled="true"> Adjust for DST </label>
                                        </div>
                                        {{ p.DstAdjust }}
                                    </div>
                                </div>
                            </div>
                            <div class="panel-footer">
                                <div class="btn-toolbar">
                                    <div class="pull-right">
                                        <button class="btn btn-sm btn-default" ng-click="edit({{ p }})">Edit</button>
                                        <button class="btn btn-sm btn-default" ng-click="delete({{ p }})">Delete</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    @section Scripts {
        <script src="~/Scripts/spectrum-core/userprofiles-index.js"></script>
    }