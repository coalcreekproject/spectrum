<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>Spectrum Operational | @ViewBag.Title</title>

    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700" rel="stylesheet" type="text/css">

    <!-- Primary vendor style -->
    <link rel="stylesheet" href="~/bower_components/font-awesome/css/font-awesome.css"/>
    <link rel="stylesheet" href="~/bower_components/animate.css/animate.css"/>
    <link rel="stylesheet" href="~/bower_components/bootstrap/dist/css/bootstrap.css"/>
    <link rel="stylesheet" href="/Content/fonts/pe-icon-7-stroke/css/pe-icon-7-stroke.css"/>
    <link rel="stylesheet" href="/Content/fonts/pe-icon-7-stroke/css/helper.css"/>
    <link rel="stylesheet" href="/Content/style.css">

    <!-- Add local styles, mostly for plugins css file -->
    @if (IsSectionDefined("Styles"))
    {
        @RenderSection("Styles", false)
    }
</head>

<body class="landing-page">

    <!-- Simple splash screen-->
    <div class="splash">
        <div class="color-line"></div>
        <div class="splash-title">
            <h1>Spectrum Operational - Emergency Management Suite</h1>
            <p>
                The ultimate collaborative suite for emergency management teams and organizations.
            </p><img src="~/Content/images/loading-bars.svg" width="64" height="64" />
        </div>
    </div>

    <!-- Main view -->
    @RenderBody()

    <!-- Section for main scripts render -->
    <script src="~/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/Scripts/homer.js"></script>

    <!-- Handler for local scripts -->
    @RenderSection("scripts", false)
</body>
</html>