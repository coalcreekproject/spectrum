@model Spectrum.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout_Blank.cshtml";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="register-container">
        <div class="row">
            <div class="col-md-12">
                <div class="text-center m-b-md">
                    <h3>Registration</h3>
                    <small>Register for a Spectrum Operational Account.</small>
                </div>
                <div class="hpanel">
                    <div class="panel-body">
                        <form id="loginForm">
                            <div class="row form-group">
                                <div class="col-lg-12">
                                    <label>Username</label>
                                    <input type="text" value="" id="" class="form-control" name="UserName">
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-lg-12">
                                    <label>Organization</label>
                                    <input type="text" value="" id="" class="form-control" name="OrganizationName">
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-lg-6">
                                    <label>Email Address</label>
                                    <input type="text" value="" id="" class="form-control" name="Email">
                                </div>
                                <div class="col-lg-6">
                                    <label>Verify Email Address</label>
                                    <input type="text" value="" id="" class="form-control" name="ConfirmEmail">
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-lg-6">
                                    <label>Password</label>
                                    <input type="password" value="" id="" class="form-control" name="Password">
                                </div>
                                <div class="col-lg-6">
                                    <label>Verify Password</label>
                                    <input type="password" value="" id="" class="form-control" name="ConfirmPassword">
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-lg-12">
                                    <input icheck type="checkbox" checked>
                                    Sign up for our newsletter
                                </div>
                            </div>
                            <div class="text-right">
                                <button class="btn btn-success">Register</button>
                                <button class="btn btn-default">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
