@using (Html.BeginForm("Register", "Registration", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="register-container">
        <div class="row">
            <div class="col-md-12">
                <div class="text-center m-b-md">
                    <h2>Register</h2>
                    <h4>Get your Spectrum Operational account today.</h4>
                </div>
                <div class="hpanel">
                    <div class="panel-body">

                        <form id="registerForm">
                            <div class="row form-group">
                                <div class="col-lg-6">
                                    <label>Email Address <span class="text-warning">- this will be your login id</span></label>
                                    <input type="email" value="" id="" class="form-control" name="Email">
                                </div>
                                <div class="col-lg-6">
                                    <label>Verify Email Address</label>
                                    <input type="email" value="" id="" class="form-control" name="ConfirmEmail">
                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col-lg-6">
                                    <label>Organization Name</label>
                                    <input type="text" value="" id="" class="form-control" name="OrganizationName">
                                </div>
                                <div class="col-lg-6">
                                    <label>Organization Type</label>
                                    <select class="form-control m-b" name="OrganizationType">
                                        @foreach (var t in Model.OrganizationTypes)
                                        {
                                            <option value="@t.Id" name="@t.Name">@t.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col-lg-6">
                                    <label>Password</label>
                                    <input type="password" value="" id="" class="form-control" name="Password">
                                </div>
                                <div class="col-lg-6">
                                    <label>Verify Password</label>
                                    <input type="password" value="" id="" class="form-control" name="ConfirmPassword">
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-lg-12">
                                    <input type="checkbox" checked>
                                    Please keep me informed of the latest Spectrum Operational news and events. <strong>We <u>never</u> sell or share your information with third parties.</strong>
                                </div>
                            </div>
                            <div class="text-right">
                                <button class="btn btn-success" value="Register">Register</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}