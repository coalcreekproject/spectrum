<div class="content" ng-controller="registerWizardController">
    <div class="register-container">
        <div class="row">
            <div class="col-md-12">
                <div class="text-center m-b-md">
                    <h2>Register</h2>
                    <h4>Get your Spectrum Operational account today.</h4>
                </div>
                <div class="hpanel">
                    <div class="panel-body">

                        <form name="simpleForm" id="simpleForm">

                            <div class="text-center m-b-md">

                                <a ng-click="wizard.show(1)" class="btn" ng-class="{ 'btn-primary': step == 1, 'btn-default': step != 1}">Step 1 - Basic Data</a>
                                <a ng-click="wizard.show(2)" class="btn" ng-class="{ 'btn-primary': step == 2, 'btn-default': step != 2}">Step 2 - User Profile</a>
                                <a ng-click="wizard.show(3)" class="btn" ng-class="{ 'btn-primary': step == 3, 'btn-default': step != 3}">Step 3 - Organization Profile</a>

                            </div>


                            <div ng-show="step == 1" class="p-m">

                                <div class="row">
                                    <div class="row form-group">
                                        <div class="col-md-6">
                                            <label>Email Address <span class="text-warning">- this will be your login id</span></label>
                                            <input type="email" value="" id="" class="form-control" name="Email" ng-model="registerViewModel.Email">
                                        </div>
                                        <div class="col-md-6">
                                            <label>Verify Email Address</label>
                                            <input type="email" value="" id="" class="form-control" name="ConfirmEmail" ng-model="registerViewModel.ConfirmEmail">
                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col-md-6">
                                            <label>Organization Name</label>
                                            <input type="text" value="" id="" class="form-control" name="OrganizationName" ng-model="registerViewModel.OrganizationName">
                                        </div>
                                        <div class="col-md-6">
                                            <label>Organization Type</label>
                                            <select class="form-control m-b" name="OrganizationType" ng-model="registerViewModel.OrganizationTypeId">
                                                @foreach (var t in Model.OrganizationTypes)
                                                {
                                                    <option value="@t.Id" name="@t.Name">@t.Name</option>
                                                }
                                            </select>
                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col-md-6">
                                            <label>Password</label>
                                            <input type="password" value="" id="" class="form-control" name="Password" ng-model="registerViewModel.Password">
                                        </div>
                                        <div class="col-md-6">
                                            <label>Verify Password</label>
                                            <input type="password" value="" id="" class="form-control" name="ConfirmPassword" ng-model="registerViewModel.ConfirmPassword">
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col-md-12">
                                            <input type="checkbox" name="NewsletterSubscribe" checked ng-model="registerViewModel.NewsletterSubscribe">
                                            Please keep me informed of the latest Spectrum Operational news and events. <strong>We <u>never</u> sell or share your information with third parties.</strong>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div ng-show="step == 2" class="p-m">
                            
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label for="firstName">First Name</label>
                                            <input type="text" id="firstName" name="FirstName" placeholder="First Name" ng-model="registerViewModel.FirstName" class="form-control" name="firstName">
                                        </div>
                                        @*<div class="col-md-4">
                                            <label for="middleName">Middle Name</label>
                                            <input type="text" id="middleName" name="MiddleName" placeholder="Middle Name" ng-model="registerViewModel.MiddleName" class="form-control">
                                        </div>*@
                                        <div class="col-md-4">
                                            <label for="lastName">Last Name</label>
                                            <input type="text" id="lastName" name="LastName" placeholder="Last Name" ng-model="registerViewModel.LastName" class="form-control">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label for="nickName">Nickname/Preferred Name</label>
                                            <input type="text" id="nickName" placeholder="Nickname" name="Nickname" ng-model="registerViewModel.Nickname" class="form-control">
                                        </div>
                                        <div class="col-md-4">
                                            <label for="title">Title</label>
                                            <input type="text" Id="title" placeholder="Title" name="Title" ng-model="registerViewModel.Title" class="form-control">
                                        </div>
                                        @*<div class="col-md-4">
                                            <label for="title">Position</label>
                                            <input type="text" Id="position" placeholder="Position" name="Position" ng-model="registerViewModel.Position" class="form-control">
                                        </div>*@
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label for="secondaryEmail">Secondary Mail</label>
                                            <input type="text" id="secondaryEmail" placeholder="Secondary Email" name="SecondaryEmail" ng-model="registerViewModel.SecondaryEmail" class="form-control">
                                        </div>
                                        <div class="col-md-4">
                                            <label for="secondaryPhone">Secondary Phone</label>
                                            <input type="text" id="secondaryPhone" name="SecondaryPhone" placeholder="Secondary Phone" ng-model="registerViewModel.SecondaryPhone" class="form-control">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="timeZone">TimeZone</label>
                                            <input type="text" id="timeZone" name="TimeZone" placeholder="TimeZone" ng-model="registerViewModel.TimeZone" class="form-control">
                                        </div>
                                        <div class="col-md-6">
                                            <label for="language">Language</label>
                                            <input type="text" id="language" placeholder="Language" name="Language" ng-model="registerViewModel.Language" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div ng-show="step == 3">

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label for="title">Primary Contact</label>
                                            <input type="text" Id="primaryContact" name="PrimaryContact" placeholder="Contact Name" ng-model="registerViewModel.PrimaryContact" class="form-control">
                                        </div>
                                        <div class="col-md-4">
                                            <label for="phone">Phone</label>
                                            <input type="tel" id="phone" name="OrgPhone" placeholder="Phone" ng-model="registerViewModel.OrgPhone" class="form-control">
                                        </div>
                                        <div class="col-md-4">
                                            <label for="fax">Fax</label>
                                            <input type="tel" id="fax" name ="Fax" placeholder="Fax Number" ng-model="registerViewModel.Fax" class="form-control">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label for="email">Email</label>
                                            <input type="text" id="orgEmail" name ="OrgEmail" placeholder="Email" ng-model="registerViewModel.OrgEmail" class="form-control">
                                        </div>
                                        <div class="col-md-4">
                                            <label for="country">Country</label>
                                            <input type="text" id="country" placeholder="Country" name="Country" ng-model="registerViewModel.Country" class="form-control">
                                        </div>
                                        <div class="col-md-4">
                                            <label for="county">County</label>
                                            <input type="text" id="county" placeholder="County" name="County" ng-model="registerViewModel.County" class="form-control">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="timeZone">TimeZone</label>
                                            <input type="text" id="orgTimeZone" name="OrgTimeZone"placeholder="Time Zone" ng-model="registerViewModel.OrgTimeZone" class="form-control">
                                        </div>
                                        <div class="col-md-6">
                                            <label for="language">Language</label>
                                            <input type="text" id="orgLanguage" name="OrgLanguage" placeholder="Language" ng-model="registerViewModel.OrgLanguage" class="form-control">
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="text-right m-t-xs">
                                <button ng-click="wizard.prev()" ng-disabled="step == 1" class="btn btn-default">Previous</button>
                                <button ng-click="wizard.next()" ng-disabled="step == 3" ng-hide="step == 3" class="btn btn-success">Next</button>
                                <button ng-click="submit()" ng-show="step == 3" class="btn btn-success">Submit</button>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>