<div ng-controller="OrganizationUserController">
    <div small-header class="normalheader transition">
        <div class="hpanel" title="Page header" content="Place your page title and breadcrumb." placement="bottom">
            <div class="panel-body">
                <a ng-click="small()" href="">
                    <div class="clip-header">
                        <i class="fa fa-arrow-up"></i>
                    </div>
                </a>
                <div id="hbreadcrumb" class="pull-right m-t-lg">
                    <ol class="hbreadcrumb breadcrumb">
                        <li>
                            <a href="@Url.Action("Index", "Portal")">Portal</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Organization")">Organizations</a>
                        </li>
                        <li>
                            <a>Organization Users</a>
                        </li>
                    </ol>
                </div>
                <h2 class="font-light m-b-xs">
                    Organization Users
                </h2>
                <small>Manage Users in your Organization</small>
            </div>
        </div>
    </div>

    <div class="content" style="padding-bottom: 0">
        <div animate-panel effect="fadeInUp">
            <div class="hpanel">
                <div class="panel-body">
                    <button id="add" class="btn btn-success pull-right" ng-click="add()">Save User Assignments</button>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        <div class="simpleDemo row">
            <div class="col-md-6">
                <div class="panel panel-dragdroplist">
                    <div class="panel-heading">
                        <h3 class="panel-title">Available</h3>
                    </div>
                    <div class="panel-dragdroplist-body">
                        <ul dnd-list="models.lists.Available">
                            <li ng-repeat="item in models.lists.Available"
                                dnd-draggable="item"
                                dnd-moved="models.lists.Available.splice($index, 1)"
                                dnd-effect-allowed="move"
                                dnd-selected="models.selected = item"
                                ng-class="{'selected': models.selected === item}">
                                {{item.userName}}
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="panel panel-dragdroplist">
                    <div class="panel-heading">
                        <h3 class="panel-title">Assigned</h3>
                    </div>
                    <div class="panel-dragdroplist-body">
                        <ul dnd-list="models.lists.Assigned">
                            <li ng-repeat="item in models.lists.Assigned"
                                dnd-draggable="item"
                                dnd-moved="models.lists.Assigned.splice($index, 1)"
                                dnd-effect-allowed="move"
                                dnd-selected="models.selected = item"
                                ng-class="{'selected': models.selected === item}">
                                {{item.userName}}
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>