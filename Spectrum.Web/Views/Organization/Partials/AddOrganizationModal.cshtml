<div class="modal-dialog">

    <div class="modal-header">
        <h4 class="modal-title">Add Organization</h4>
        <small class="font-bold">Add an organization to the system</small>
    </div>

    <div class="modal-body">
        <form method="get" class="form-horizontal">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <label for="OrgName">Organization Name</label>
                        <input type="text" id="OrgName" placeholder="Organization Name" ng-model="organization.name" class="form-control">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        @*<select class="form-control m-b" name="organizationType" id="organizationType" ng-model="organization.organizationTypeId">
                            <option ng-repeat="option in organizationTypes" value="{{option.organizationTypeId}}">{{option.name}}</option>
                        </select>*@
                        <select class="form-control m-b"
                                name="organizationType"
                                id="organizationType"
                                ng-model="organization.selectedOrgType"
                                ng-options="o.name for o in organizationTypes"></select>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-default" ng-click="cancel()">Close</button>
    <button type="button" class="btn btn-success" ng-click="ok(organization)">Save changes</button>
</div>