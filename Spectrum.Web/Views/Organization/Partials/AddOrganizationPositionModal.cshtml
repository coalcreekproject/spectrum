<div class="modal-dialog">

    <div class="modal-header">
        <h4 class="modal-title">Add Position</h4>
        <small class="font-bold">Add a Position used in your organization</small>
    </div>

    <div class="modal-body">
        <form method="get" class="form-horizontal">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <label for="PositionName">Position Name</label>
                        <input type="text" id="PositionName" placeholder="Position Name" ng-model="organizationPosition.Name" class="form-control">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <label for="Description">Position Description</label>
                        <input type="text" id="Description" placeholder="Description" ng-model="organizationPosition.Description" class="form-control">
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-default" ng-click="cancel()">Close</button>
    <button type="button" class="btn btn-success" ng-click="ok(organizationPosition)">Save changes</button>
</div>