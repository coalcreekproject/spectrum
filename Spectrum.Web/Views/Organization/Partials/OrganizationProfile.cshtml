@model IEnumerable<Spectrum.Web.Models.OrganizationProfileViewModel>

@{
    ViewBag.Title = "Organization Profiles";
}

@section Styles {
}

<div ng-controller="OrganizationProfileController">
    <div small-header class="normalheader transition">
        <div class="hpanel" title="Page header" content="Place your page title and breadcrumb." placement="bottom">
            <div class="panel-body">
                <a ng-click="small()" href="">
                    <div class="clip-header">
                        <i class="fa fa-arrow-up"></i>
                    </div>
                </a>
                <div id="hbreadcrumb" class="pull-right m-t-lg">
                    <ol class="hbreadcrumb breadcrumb">
                        <li>
                            <a href="@Url.Action("Index", "Portal")">Portal</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Organization")">Organizations</a>
                        </li>
                        <li>
                            <a>Organization Profiles</a>
                        </li>
                    </ol>
                </div>
                <h2 class="font-light m-b-xs">
                    Organization Profiles
                </h2>
                <small>Manage profiles your organization</small>
            </div>
        </div>
    </div>

    <div small-header child="row" class="normalheader transition">
        <div animate-panel effect="fadeInUp">
            <div class="hpanel">
                <div class="panel-body">
                    <div class="form-inline">
                        <div class="col-lg-10">
                            <div class="input-group m-b">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-primary">Search</button>
                                </span>
                                <input type="text" class="form-control" placeholder="Search organization profiles...">
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <div class=pull-right>
                                <div style="padding-bottom: 15px">
                                    <button id="add" class="btn btn-primary" ng-click="add()">Add an Organization Profile</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        <div ng-repeat="p in data.organizationProfiles track by p.id">
            <div animate-panel child="row" effect="fadeInRight">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="hpanel">
                            <div class="panel-heading hbuilt">
                                <div panel-tools></div>
                                {{ p.profileName }}
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <label class="control-label">Profile Name: </label> {{ p.profileName }}
                                    </div>
                                    <div class="col-sm-4">
                                        <label class="control-label">Profile Description: </label> {{ p.description }}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <label class="control-label">Primary Contact: </label> {{ p.primaryContact }}
                                    </div>
                                    <div class="col-md-4">
                                        <label class="control-label">Phone: </label> {{ p.phone }}
                                    </div>
                                    <div class="col-md-4">
                                        <label class="control-label">Fax: </label> {{ p.fax }}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <label class="control-label">Email: </label> {{ p.email }}
                                    </div>
                                    <div class="col-md-4">
                                        <label class="control-label">Country: </label> {{ p.country}}
                                    </div>
                                    <div class="col-md-4">
                                        <label class="control-label">County: </label> {{ p.county }}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <label class="control-label">Time Zone: </label> {{ p.timeZone }}
                                    </div>
                                    <div class="col-md-4">
                                        <label class="control-label">Language: </label> {{ p.language}}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-8">
                                        <label class="control-label">Notes: </label> {{ p.notes }}
                                    </div>
                                </div>
                            </div>
                            <div class="panel-footer">
                                <div class="btn-toolbar">
                                    <div class="pull-right">
                                        <button class="btn btn-sm btn-default" ng-click="edit({{ p }})">Edit</button>
                                        <button class="btn btn-sm btn-default" ng-click="delete({{ p }})">Delete</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @*<script src="~/Scripts/spectrum-core/organizationprofiles-index.js"></script>*@
}