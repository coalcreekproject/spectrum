<div class="modal-dialog">

    <div class="modal-header">
        <h4 class="modal-title">Delete an Organization Profile</h4>
        <small class="font-bold">Delete an profile for this organization.</small>
    </div>

    <div class="modal-body">
        <form method="get" class="form-horizontal">

            <div class="form-group">
                <div class="row">
                    <div class="col-md-12">
                        <div>
                            <label>
                                <input type="checkbox" name="checkboxDefault" ng-model="organizationProfile.default" disabled/> Make this the organization default profile
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-4">
                        <label for="profileName">Profile Name</label>
                        <input type="text" Id="profileName" placeholder="Profile Name" ng-model="organizationProfile.profileName" class="form-control" disabled>
                    </div>
                    <div class="col-md-4">
                        <label for="description">Description</label>
                        <input type="text" Id="description" placeholder="Description" ng-model="organizationProfile.description" class="form-control" disabled>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-4">
                        <label for="primaryContact">Primary Contact</label>
                        <input type="text" Id="primaryContact" placeholder="Contact Name" ng-model="organizationProfile.primaryContact" class="form-control" disabled>
                    </div>
                    <div class="col-md-4">
                        <label for="phone">Phone</label>
                        <input type="tel" id="phone" placeholder="Phone" ng-model="organizationProfile.phone" class="form-control" disabled>
                    </div>
                    <div class="col-md-4">
                        <label for="fax">Fax</label>
                        <input type="tel" id="fax" placeholder="Fax Number" ng-model="organizationProfile.fax" class="form-control" disabled>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-4">
                        <label for="email">Email</label>
                        <input type="text" id="email" placeholder="Email" ng-model="organizationProfile.email" class="form-control" disabled>
                    </div>
                    <div class="col-md-4">
                        <label for="country">Country</label>
                        <input type="text" id="country" placeholder="Country" ng-model="organizationProfile.country" class="form-control" disabled>
                    </div>
                    <div class="col-md-4">
                        <label for="county">County</label>
                        <input type="text" id="county" placeholder="Secondary Phone" ng-model="organizationProfile.county" class="form-control" disabled>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <label for="timeZone">TimeZone</label>
                        <select class="form-control m-b"
                                name="timeZone"
                                id="timeZone"
                                ng-model="organizationProfile.selectedTimeZone"
                                ng-options="option.name for option in timeZones"
                                disabled></select>
                    </div>
                    <div class="col-md-6">
                        <label for="language">Language</label>
                        <select class="form-control m-b"
                                name="language"
                                id="language"
                                ng-model="organizationProfile.selectedLang"
                                ng-options="option.name for option in languages"
                                disabled></select>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-12">
                        <label for="notes">Notes</label>
                        <textarea id="notes" rows="4" placeholder="Notes" ng-model="organizationProfile.notes" class="form-control"></textarea>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-default" ng-click="cancel()">Close</button>
    <button type="button" class="btn btn-danger" ng-click="ok(organizationProfile)">Delete</button>
</div>