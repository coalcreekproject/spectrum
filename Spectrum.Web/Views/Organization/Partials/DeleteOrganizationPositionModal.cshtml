<div class="modal-dialog">

    <div class="modal-header">
        <h4 class="modal-title">Delete Position</h4>
        <small class="font-bold">Are you sure you want to delete this Position?</small>
    </div>

    <div class="modal-body">
        <form method="get" class="form-horizontal">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <label for="PositionName">Position Name</label>
                        <input type="text" id="PositionName" placeholder="Position Name" ng-model="Position.Name" class="form-control" disabled>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <label for="Description">Position Description</label>
                        <input type="text" id="Description" placeholder="Description" ng-model="Position.Description" class="form-control" disabled>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-default" ng-click="cancel()">Close</button>
    <button type="button" class="btn btn-danger" ng-click="ok(Position)">Delete</button>
</div>