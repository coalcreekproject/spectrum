<div ng-controller="OrganizationController as organizationController">
    <div small-header class="normalheader transition">
        <div class="hpanel" title="Page header" content="Place your page title and breadcrumb." placement="bottom">
            <div class="panel-body">
                <a ng-click="small()" href="">
                    <div class="clip-header">
                        <i class="fa fa-arrow-up"></i>
                    </div>
                </a>
                <div id="hbreadcrumb" class="pull-right m-t-lg">
                    <ol class="hbreadcrumb breadcrumb">
                        <li>
                            <a href="@Url.Action("Index", "Dashboard")">Dashboard</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Organization")">Organizations</a>
                        </li>
                    </ol>
                </div>
                <h2 class="font-light m-b-xs">
                    Organization
                </h2>
                <small>Manage your organization(s)</small>
            </div>
        </div>
    </div>

    <div small-header child="row" class="normalheader transition">
        <div animate-panel effect="fadeInUp">
            <div class="hpanel">
                <div class="panel-body">
                    <div class="form-inline">
                        <div class="col-sm-10">
                            <div class="input-group m-b">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-primary">Search</button>
                                </span>
                                <input type="text" class="form-control" placeholder="Search organizations...">
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class=pull-right>
                                <div style="padding-bottom: 15px">
                                    <button id="add" class="btn btn-primary" ng-click="add()">Add an Organization</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="content">
        <div ng-repeat="o in data.organizations track by o.Id">
            <div animate-panel child="row" effect="fadeInRight">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="hpanel">
                            <div class="panel-heading hbuilt">
                                <div panel-tools></div>
                                {{ o.Name }}
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <label class="control-label">Organization Name: </label> {{ o.Name }}
                                    </div>
                                    <div class="col-sm-4">
                                        <label class="control-label">Organization Type: </label> {{ o.OrganizationTypeId }}
                                    </div>
                                </div>
                            </div>
                            <div class="panel-footer">
                                <div class="btn-toolbar">
                                    <div class="pull-right">
                                        <button class="btn btn-sm btn-default" ng-click="edit({{ o }})">Edit</button>
                                        <button class="btn btn-sm btn-default" ng-click="profiles({{ o }})">Profiles</button>
                                        <button class="btn btn-sm btn-default" ng-click="roles({{ o }})">Roles</button>
                                        <button class="btn btn-sm btn-default" ng-click="positions({{ o }})">Positions</button>
                                        <button class="btn btn-sm btn-default" ng-click="jurisdictions({{ o }})">Jurisdictions</button>
                                        <button class="btn btn-sm btn-default" ng-click="delete({{ o }})">Delete</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>