@model IEnumerable<Spectrum.Web.Models.OrganizationProfileViewModel>

@{
    ViewBag.Title = "Organization Profiles";
}

@section Styles {
}

<div ng-controller="OrganizationProfileController as organizationProfileController">
    <div small-header class="normalheader transition">
        <div class="hpanel" title="Page header" content="Place your page title and breadcrumb." placement="bottom">
            <div class="panel-body">
                <a ng-click="small()" href="">
                    <div class="clip-header">
                        <i class="fa fa-arrow-up"></i>
                    </div>
                </a>
                <div id="hbreadcrumb" class="pull-right m-t-lg">
                    <ol class="hbreadcrumb breadcrumb">
                        <li>
                            <a href="@Url.Action("Index", "Dashboard")">Dashboard</a>
                        </li>
                        <li>
                            <a href="@Url.Action("OrganizationIndex", "Organization")">Organizations</a>
                        </li>
                        <li>
                            <a>Organization Profiles</a>
                        </li>
                    </ol>
                </div>
                <h2 class="font-light m-b-xs">
                    Organization Profiles
                </h2>
                <small>Manage your organization profiles</small>
            </div>
        </div>
    </div>

    <div small-header child=" row " class="normalheader transition">
        <div animate-panel effect="fadeInUp">
            <div class="hpanel">
                <div class="panel-body">
                    <div class="form-inline">
                        <div class="col-md-4">
                            <input class=" form-control" type="text" placeholder="Search organizations...">
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-default">Search</button>
                        </div>
                        <div>
                            <div class=pull-right>
                                <div style="padding-bottom: 15px">
                                    <button id="add" class="btn btn-primary" ng-click="add()">Add an Organization Profile</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="content">
        <div ng-repeat="p in data.organizationProfiles track by p.Id">
            <div animate-panel child="row" effect="fadeInRight">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="hpanel">
                            <div class="panel-heading hbuilt">
                                <div panel-tools></div>
                                {{ p.Name }}
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <label class="control-label">Profile Name: </label> {{ p.Name }}
                                    </div>
                                    <div class="col-sm-3">
                                        <label class="control-label">Profile Description: </label> {{ p.Description }}
                                    </div>
                                </div>
                            </div>
                            <div class="panel-footer">
                                <div class="btn-toolbar">
                                    <div class="pull-right">
                                        <button class="btn btn-sm btn-default" ng-click="edit({{ p }})">Edit</button>
                                        <button class="btn btn-sm btn-default" ng-click="delete({{ p }})">Delete</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/spectrum-core/organizationprofiles-index.js"></script>
}